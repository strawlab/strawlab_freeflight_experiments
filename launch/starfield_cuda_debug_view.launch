<launch>
  <!-- Spawn the display server. -->
  <node name="ds_debug_vworld" pkg="freemovr_engine" type="display_server" args="--mode=virtual_world">
    <rosparam command="load" file="$(find strawlab_freeflight_experiments)/data/test/display_server_config.yaml" />
  </node>

  <!-- And show another display_server to see the cubemap -->
  <node name="ds_debug_cubemap" pkg="freemovr_engine" type="display_server" args="--mode=cubemap">
    <rosparam command="load" file="$(find strawlab_freeflight_experiments)/data/test/display_server_config.yaml" />
  </node>
</launch>
