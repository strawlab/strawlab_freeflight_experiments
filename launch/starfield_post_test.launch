<launch>
  <!-- Spawn the display server. -->
  <node name="ds_replay" pkg="vros_display" type="display_server" args="--mode=virtual_world --throttle">
    <rosparam command="load" file="$(find strawlab_freeflight_experiments)/data/test/display_server_config.yaml" />
  </node>

  <!-- And show another display_server to see the cubemap -->
  <node name="ds_replay2" pkg="vros_display" type="display_server" args="--mode=cubemap --throttle">
    <rosparam command="load" file="$(find strawlab_freeflight_experiments)/data/test/display_server_config.yaml" />
  </node>

  <!-- Set the stimulus mode. -->
  <node name="stimulus_latch" pkg="rostopic" type="rostopic" args="pub --once /stimulus_mode std_msgs/String StimulusStarFieldAndModel">
  </node>

  <!-- Set the camera position. -->
  <node name="camera_position" pkg="rostopic" type="rostopic" args="pub --once -f $(find strawlab_freeflight_experiments)/data/test/camera_position.yaml /ds_replay/trackball_manipulator_state  vros_display/TrackballManipulatorState">
  </node>

  <group>
    <remap from="pose" to="model_pose"/>
    <node name="set_model" pkg="vros_display" type="send_pose">
    </node>
  </group>

  <node name="starfield_test" pkg="strawlab_freeflight_experiments" type="starfield_test">
  </node>

  <!-- And a test. -->
  <group>
    <remap from="capture_frame_to_path" to="ds_replay/capture_frame_to_path"/>
    <test test-name="test_starfield_and_model" pkg="strawlab_freeflight_experiments" type="test_starfield_and_model.py" />
  </group>
</launch>
