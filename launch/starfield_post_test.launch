<launch>
  <!-- Spawn the display server (actually draws). -->
  <node name="ds_replay" pkg="vros_display" type="display_server" args="--mode=geometry">
    <rosparam command="load" file="$(find strawlab_freeflight_experiments)/data/test/display_server_config.yaml" />
  </node>

  <!-- Set the stimulus mode. -->
  <node name="stimulus_latch" pkg="rostopic" type="rostopic" args="pub --once /stimulus_mode std_msgs/String StimulusStarFieldAndPost">
  </node>

  <!-- Set the camera position. -->
  <node name="camera_position" pkg="rostopic" type="rostopic" args="pub --once -f $(find strawlab_freeflight_experiments)/data/test/camera_position.yaml /ds_replay/trackball_manipulator_state  vros_display/TrackballManipulatorState">
  </node>

</launch>
